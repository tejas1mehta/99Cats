<h1>Rent a Cat</h1>

<form action=<%=cat_rental_requests_url%> method="POST">
  <%= auth_token_html %>

  <select name="cat_rental_request[cat_id]" id="cat_id">
    <% @cats.each do |cat| %>
      <option value="<%=cat.id%>"><%=cat.name.capitalize%></option>
    <%end%>
  </select>
  <br>
  <label for="rental_start_date">Start Date</label>
  <input type="date" name="cat_rental_request[start_date]" id="rental_start_date">
  <br>
  <label for="rental_end_date">End Date</label>
  <input type="date" name="cat_rental_request[end_date]" id="rental_end_date">
  <br>

  <input type="submit" value="Rent cat ">
</form>